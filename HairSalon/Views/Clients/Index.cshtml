@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists!</h1>

@if (Model.Count == 0)
{
  <h3>No Clients!</h3>
  <p>click <a href='/stylists/@Model["stylist"].StylistId/clients/new'>here</a> to add a new Client</p>
}
@foreach(Client client in Model)
{
<h3><a href='/stylists/Stylist.StylistId/clients'>@client.ClientName</a></h3>
}

<p>@Html.ActionLink("Back to Salon Homepage", "Index", "Home")</p>