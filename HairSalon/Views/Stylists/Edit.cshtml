@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
<h1>Edit Stylist </h1>

<h2>Edit this Stylist: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())

@Html.HiddenFor(model=>model.StylistId)

<div class="form-group">
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})
</div>
<div class="form-group">
  @Html.LabelFor(model => model.DateHired)
  @Html.TextBoxFor(model => model.DateHired, new {required = "required"})
</div>

<input type="submit" value="save changes" />

<p class="link">@Html.ActionLink("Back to list", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>